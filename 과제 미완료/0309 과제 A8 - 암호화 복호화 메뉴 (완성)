package chap01;

import java.util.Scanner;

// 아스키코드 활용 문자 변경
// char(문자)타입을 byte(숫자)타입으로 전환 후
// 임의의 숫자를 더하거나 빼서 변경한 뒤
// byte 타입의 숫자를 char 타입으로 변환
// 숫자 -> 영어 : 아스키코드로 전환 후 + 49
// 영어 -> 숫자 : 아스키코드로 전환 후 - 49

public class Chap01 {

	public static void main(String[] args) {
		Chap01 cal = new Chap01();

		cal.showMenu();
		// 메뉴 선택
		String firstInput = cal.choiceScanner();
		if (firstInput.equals("1")) { // 1번 메뉴를 고를 때
			String secondInput = cal.numScanner();

			// 암호화 메서드 호출
			cal.encodeNum(secondInput);

		} else if (firstInput.equals("2")) { // 2번 메뉴를 고를 때
			String secondInput = cal.numScanner();

			// 복호화 메서드 호출
			cal.decodeNum(secondInput);

		} else if (firstInput.equals("3")) { // 3번 메뉴를 고를 때
			System.out.println("Bye!");
		}
	}

	public void showMenu() {
		System.out.println("#Menu");
		System.out.println("1. Encoder");
		System.out.println("2. Decoder");
		System.out.println("3. Exit");
	}

	public String choiceScanner() {
		Scanner sc = new Scanner(System.in);
		System.out.print("메뉴를 선택하세요 → ");
		return sc.next();
	}

	public String numScanner() {
		Scanner sc = new Scanner(System.in);
		System.out.print("암호를 입력하세요 → ");
		return sc.next();
	}

	public void encodeNum(String secondInput) {
		for (int i = 0; i < secondInput.length(); i++) {
			byte b = 0;
			if (secondInput.charAt(i) > 47 && secondInput.charAt(i) < 58) {
				b = (byte) ((byte) secondInput.charAt(i) + 49);
				char c = (char) b;
				System.out.print(c);
			}
		}
	}

	public void decodeNum(String secondInput) {
		for (int i = 0; i < secondInput.length(); i++) {
			byte b = 0;
			if (secondInput.charAt(i) > 96 && secondInput.charAt(i) < 107) {
				b = (byte) ((byte) secondInput.charAt(i) - 49);
				char c = (char) b;
				System.out.print(c);
			}
		}
	}
}
